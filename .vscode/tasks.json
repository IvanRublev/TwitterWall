{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mix compile",
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mix test.watch --stale",
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning",
                "$mixTestFailure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test cursor",
            "type": "shell",
            "command": "mix test ${relativeFile}:${lineNumber}",
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning",
                "$mixTestFailure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "format",
            "type": "shell",
            "command": "mix format",
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "group": "build"
        },
        {
            "label": "typecheck",
            "type": "shell",
            "command": "mix dialyzer",
            "problemMatcher": [
                "$mixCompileError",
                "$mixCompileWarning"
            ],
            "group": "build"
        },
    ]
}